<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/user_listview_shape"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight=".2"
        android:src="@drawable/ic_account_circle_gray_24dp"
        android:scaleType="fitCenter">

    </ImageView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".8"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvBlunoBeetleMacAddressTemp"
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="MacAddress: "
                android:textAlignment="viewEnd"/>
            <TextView
                android:id="@+id/tvBlunoBeetleMacAddress"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_height="wrap_content"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvBlunoBeetleNameTemp"
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Name: "
                android:textAlignment="viewEnd"/>
            <TextView
                android:id="@+id/tvBlunoBeetleName"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_height="wrap_content"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvBlunoBeetleThresholdTemp"
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Threshold: "
                android:textAlignment="viewEnd"/>

            <TextView
                android:id="@+id/tvBlunoBeetleThreshold"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_height="wrap_content"
                android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>